<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rellaout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/snippet_top_next_toolbar"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rellaout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rellaout1">

                <ImageView
                    android:id="@+id/image_taken"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center" />

                <EditText
                    android:id="@+id/report_details_next_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_taken"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="57dp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/location_of_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report_details_next_activity"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="1dp"
                    android:text="Location"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>